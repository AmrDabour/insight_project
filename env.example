# Insight Project - Environment Variables Example
# Copy this file to .env and update the values

# ===========================================
# REQUIRED: Google AI API Configuration
# ===========================================
GOOGLE_AI_API_KEY=your-google-gemini-api-key-here

# ===========================================
# Server Configuration
# ===========================================
HOST=0.0.0.0
PORT=8000
DEBUG=false

# ===========================================
# Service Configuration
# ===========================================
FORM_READER_ENABLED=true
MONEY_READER_ENABLED=true
PPT_PDF_READER_ENABLED=true

# ===========================================
# File Upload Settings
# ===========================================
MAX_FILE_SIZE=52428800
UPLOAD_DIR=uploads
TEMP_DIR=temp

# ===========================================
# AI Services Configuration
# ===========================================
TTS_ENABLED=true
LOG_LEVEL=INFO

# ===========================================
# Session Management
# ===========================================
SESSION_TIMEOUT=3600
MAX_SESSIONS=1000

# ===========================================
# CORS Configuration
# ===========================================
ALLOWED_ORIGINS=*

# ===========================================
# Form Reader Specific
# ===========================================
YOLO_MODEL_PATH=app/models/boxes.pt
DOT_LINE_MODEL_PATH=app/models/dot_line.pt

# ===========================================
# Cloud Platform Settings (if needed)
# ===========================================
# RENDER_EXTERNAL_URL=https://your-app.onrender.com
# AWS_REGION=us-east-1
# AZURE_LOCATION=eastus 